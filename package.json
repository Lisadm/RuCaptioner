{
  "name": "rucaptioner",
  "version": "1.0.4",
  "description": "LORA Dataset Management System - Desktop app for managing image datasets with AI-powered captioning",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-backend": "pyinstaller backend.spec",
    "dist": "npm run build-backend && electron-builder"
  },
  "build": {
    "appId": "com.rucaptioner.app",
    "productName": "RuCaptioner v1.0.4 - Premium Gold Edition",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "zip",
        "dir"
      ],
      "icon": "frontend/img/logo.png"
    },
    "files": [
      "electron/**/*",
      "frontend/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/backend.exe",
        "to": "backend/backend.exe"
      }
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  }
}